@using PCWeb.Models;
@using PCWeb.Areas.Private.Data;
@model PCWeb.Models.Sanpham
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Private/Views/Layout/_LayoutAdmin.cshtml";
    List<Sanpham> sanphams = ViewData["DsSanpham"] as List<Sanpham>;
    IEnumerable<Hangsanxuat> d = ViewData["DsHSX"] as IEnumerable<Hangsanxuat>;
}

<!-- /.card-header -->
<div class="card-body row">
    <div class="col-lg-6">
        <table id="example2" class="table table-bordered table-hover">
            <thead>
                <tr>

                    <th>Ma San Pham</th>
                    <th>Ten San Pham</th>
                    <th>Gia Tien</th>
                    <th>So Luong</th>
                    <th>Lenh</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Sanpham i in sanphams)
                {
                    <tr>
                        <td>@i.Masp</td>
                        <td>@i.Tensp</td>
                        <td>@i.Giatien</td>
                        <td>@i.Soluong</td>
                        <td>
                            @using (Html.BeginForm("delete", "ViewSP", FormMethod.Post))
                            {
                                <input type="hidden" name="x" value="@i.Masp" />
                                <button type="submit" class="btn btn-block btn-danger" >Delete</button>
                            }
                            @using (Html.BeginForm("update", "ViewSP", FormMethod.Post))
                            {
                                <input type="hidden" name="maloai" value="@i.Masp" />
                                <button type="submit" class="btn btn-block btn-default">Edit</button>
                            }
                        </td>
                    </tr>
                }

            </tbody>
            
            
        
        </table>
    </div>
    <div class="col-lg-6">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Thong Tin</h3>
            </div>
            @using (Html.BeginForm("Index", "ViewSP", FormMethod.Post))
            {
                <div class="card-body">
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Masp, new { @class = "form-control", @id = "maloai", @required = true, @type = "hidden", @placeholder = "Ma Loai ( Required )" })
                    </div>
                    <div class="form-group">
                        <label for="tenloai">Ten San Pham</label>

                        @Html.TextBoxFor(m => m.Tensp, new { @class = "form-control", @id = "tenloai", @required = true, @placeholder = "Ten Loai ( Required )" })
                    </div>
                    <div class="form-group">
                        <label for="thuocLoai">Gia Tien</label>

                        @Html.TextBoxFor(m => m.Giatien, new { @class = "form-control", @id = "thuocLoai", @required = true, @placeholder = " 0 ( Required )" })
                    </div>
                    <div class="form-group">
                        <label for="ghiChu">So Luong</label>

                        @Html.TextBoxFor(m => m.Soluong, new { @class = "form-control", @id = "ghiChu", @placeholder = "Ghi chu ( not Required )" })
                    </div>
                    <div class="form-group">
                        <label>Mo Ta</label>
                    </div>
                    <div class="form-group">
                        <label>Hang</label>
                        @Html.DropDownListFor(m => m.Mahang, Dropdown.GetAllHSXCategories())
                    </div>

                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            }
            @using (Html.BeginForm("UploadFile", "ViewSP", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
            <div>
                <img src="@Path.Combine(Server.MapPath("~/Anhbia/"), sanphams.Select(m => m.Anhbia).Where(m => m.m)" />
                @Html.TextBox("file", "", new { type = "file" }) <br />
                <input type="submit" value="Upload" />
                @ViewBag.Message
            </div>
            }
        </div>
    </div>
</div>

<!-- /.card-body -->
